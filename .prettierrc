{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "arrowParens": "always",
  "printWidth": 120,
  "proseWrap": "always",
  "proseWrapColumn": 120,
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "tabWidth": 2,
        "semi": false,
        "singleQuote": false,
        "proseWrap": "never",
        "proseWrapColumn": 80
      }
    }
  ]
}
